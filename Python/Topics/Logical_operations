age = 20
has_ticket = False
if age >= 18 and not has_ticket:               #all variable must be true if one is false all the statement becmoe false
    print("you are allow to enter sr")         
else:
    print("sorry body you can not enter")

has_pass = False
knows_pass = False
if has_pass or not knows_pass:
    print("acess granted")               # at least must be true, if everything is false, the statement become false
else:
    print("Access not granted")

is_banned = False
if not is_banned:                        #change to the opposite
    print("you are allowed to play")
elif is_banned:
    print("you are not allowed to play")

user = 17
ticket = False
banned = True
if (user >= 18 or ticket) or not banned:
    print("Acces granted")
else:
    print("you are not allow to enter")

go = True
clody = True
place = 60

if go and clody and place < 60:
    print("so what are you waiting for, lets go")
elif go and clody and place > 60:
    print ("i know you wnna go but it is so far")
elif go and not clody and place < 60:
    print("it is not too far but it is not clody, so...")
elif not go and clody and place < 60:
    print("why you dont wanna go, it is clody and it is not far")
elif not go and not clody and place < 60:
    print("yeah, i know it is not to far but it not cloudy and i dont wanna go either")
elif go or clody and place < 60:
    print("lets go, anyways is not too far")